<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="myapp.coursera.app3.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:text="Please Enter Info:" />
        
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="1. Name (REQUIRED)"
            android:inputType="textPersonName"
            android:layout_weight="1"  >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="2. Street Address"
            android:inputType="textPostalAddress"
            android:layout_weight="1"  />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="3. Message Date"
            android:inputType="date"
            android:layout_weight="1"  />

        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="4. Message Time"
            android:inputType="time"
            android:layout_weight="1"  />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="5. Email Address"
            android:inputType="textEmailAddress"
            android:layout_weight="1"  />

        <EditText
            android:id="@+id/myphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="6. My Phone"
            android:inputType="phone"
            android:layout_weight="1"  />

        <EditText
            android:id="@+id/destphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="7. Reciever's Phone (REQUIRED)"
            android:inputType="phone"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="8. Text Message (REQUIRED)"
            android:inputType="textMultiLine"
            android:layout_weight="10"  />

        <Button
            android:id="@+id/button1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Text Message"
            android:onClick="processForm"
            android:layout_weight="1"/>
        
    </LinearLayout>

</ScrollView>